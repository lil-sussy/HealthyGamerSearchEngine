{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: start",
      "type": "npm",
      "script": "start",
      "group": "build",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/frontend",
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "..."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Compiled successfully",
          "endsPattern": "^Failed to compile"
        }
      }
    },
    {
      "label": "npm: build",
      "type": "npm",
      "script": "build",
      "group": "build",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/frontend",
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "..."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Compiled successfully",
          "endsPattern": "^Failed to compile"
        }
      }
    }
  ]
}